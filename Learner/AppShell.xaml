<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Learner.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:data="clr-namespace:Learner"
    Shell.NavBarHasShadow="true"
    Visual="Material">
    <TabBar>
        <ShellContent Route="MainPage"
                      Title="Words"
                      Icon="baseline_book_black_18dp.png"
                      ContentTemplate="{DataTemplate data:MainPage}" />
        <ShellContent Route="CollectionsPage"
                      Title="Collections"
                      Icon="baseline_style_black_18dp.png"
                      ContentTemplate="{DataTemplate data:CollectionsPage}" />
        <ShellContent Route="QuizPage"
                      Title="Quiz"
                      Icon="baseline_school_black_18dp.png"
                      ContentTemplate="{DataTemplate data:QuizPage}" />
        <ShellContent Route="SettingsPage"
                      Title="Settings"
                      Icon="baseline_settings_black_18.png"
                      ContentTemplate="{DataTemplate data:SettingsPage}"/>
    </TabBar>
</Shell>
