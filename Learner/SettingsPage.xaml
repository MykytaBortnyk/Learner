<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Learner.SettingsPage">
    <ContentPage.Content>
        <ScrollView Margin="15, 15, 15, 0"
                    Padding="0,0,0,15"
                    x:Name="scrollView">
            <StackLayout>
                <Label x:Name="AuthStatus"
                       Text="Auth status"/>
                <Label x:Name="sync"
                       Text="Sync status"/>
                <Label x:Name="EthStatus"/>
                <Grid>
                    <Button Text="Register"
                            Clicked="Button_Clicked"
                            x:Name="register"/>
                    <Button Grid.Column="1"
                            Text="Log In"
                            Clicked="Button1_Clicked"
                            x:Name="logIn"/>
                </Grid>
                <Button Text="Sync"
                        Clicked="OnSyncClicked"/>
                <Button Text="Log out"
                        x:Name="logOut"
                        Clicked="OnLogOutClicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
